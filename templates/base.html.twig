                <div class="copyright-notice">
                    <p><strong>© {{ "now"|date("Y") }} DA BOIT Maxence</strong></p>
                    <p>Tous droits réservés</p>
                    <p>Ce site et son contenu sont protégés</p>
                    <p>par le droit d'auteur français.</p>
                    <p>Toute reproduction, même partielle,</p>
                    <p>est strictement interdite sans autorisation.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    {# NOUVEAU SCRIPT MENU #}
    <script>
    document.addEventListener('DOMContentLoaded', () => {
        const toggleBtn = document.getElementById('menuToggle');
        const overlay = document.getElementById('menuOverlay');
        
        // Fonction pour basculer le menu
        function toggleMenu() {
            document.body.classList.toggle('menu-is-open');
        }

        // Clic sur le bouton
        if (toggleBtn) {
            toggleBtn.addEventListener('click', toggleMenu);
        }

        // Clic en dehors du panneau blanc pour fermer
        if (overlay) {
            overlay.addEventListener('click', (e) => {
                if (e.target === overlay) {
                    toggleMenu();
                }
            });
        }

        // Fermer le menu si on clique sur un lien
        document.querySelectorAll('.menu-link').forEach(link => {
            link.addEventListener('click', () => {
                document.body.classList.remove('menu-is-open');
            });
        });
    });
    </script>

    {% block javascripts %}{% endblock %}
</body>
</html>