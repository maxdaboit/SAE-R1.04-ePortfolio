{% extends 'base.html.twig' %}

{% block title %}Blender 3D - DA BOIT Maxence{% endblock %}

{% block stylesheets %}
<style>
    /* --- Thème BLENDER (Neutre et Orange) --- */
    :root {
        --radius: 28px;
        --card-bg: #f8f9fa;
        --accent-blender: #e67e22;
    }

    /* Animation subtile sur les images */
    .gallery-img {
        width: 100%; height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
        border-radius: calc(var(--radius) - 10px);
    }
    .gallery-container {
        overflow: hidden; 
        border-radius: calc(var(--radius) - 10px);
        height: 100%; width: 100%;
    }
    .bento-card:hover .gallery-img {
        transform: scale(1.05);
    }
</style>
{% endblock %}

{% block body %}
<div class="container-custom" style="max-width: 1200px; margin: 0 auto; padding: 2rem;">
    
    <a href="{{ path('app_passions') }}" style="text-decoration: none; color: #666; font-weight: 500; margin-bottom: 2rem; display: block;">
        ← Retour aux passions
    </a>

    <div class="bento-grid">

        <div class="bento-card col-span-6 d-flex flex-column justify-content-center">
            <span class="badge bg-warning text-dark mb-3" style="width: fit-content;">CGI & Design</span>
            <h1 class="big-title">Blender <span style="color: var(--accent-blender);">3D</span></h1>
            <p class="text-secondary">
                De la modélisation Hard-Surface à la création d'environnements procéduraux.
            </p>
        </div>

        <div class="bento-card col-span-6 p-2">
            <div class="gallery-container">
                <img src="https://via.placeholder.com/800x400/e67e22/ffffff?text=Mon+Meilleur+Rendu" class="gallery-img" alt="Rendu 3D Principal">
            </div>
        </div>

        <div class="bento-card col-span-4">
            <h3>Mon Workflow</h3>
            <div class="d-flex flex-column gap-3 mt-4">
                <div class="d-flex align-items-center gap-3">
                    <div class="bg-light p-2 rounded"><i class="fas fa-cube text-warning"></i></div>
                    <div><strong>Modeling</strong><br><span class="small text-muted">Low & High Poly</span></div>
                </div>
                <div class="d-flex align-items-center gap-3">
                    <div class="bg-light p-2 rounded"><i class="fas fa-paint-brush text-warning"></i></div>
                    <div><strong>Texturing</strong><br><span class="small text-muted">Substance & Nodes</span></div>
                </div>
                <div class="d-flex align-items-center gap-3">
                    <div class="bg-light p-2 rounded"><i class="fas fa-camera text-warning"></i></div>
                    <div><strong>Rendering</strong><br><span class="small text-muted">Cycles / Eevee</span></div>
                </div>
            </div>
        </div>

        <div class="bento-card col-span-8 p-4">
            <h3 class="mb-3">Projets Récents</h3>
            <div class="row g-3">
                <div class="col-6" style="height: 200px;">
                    <div class="gallery-container">
                        <img src="https://via.placeholder.com/400x300/333/fff?text=Robot" class="gallery-img" alt="Projet 1">
                    </div>
                </div>
                <div class="col-6" style="height: 200px;">
                    <div class="gallery-container">
                        <img src="https://via.placeholder.com/400x300/444/fff?text=Scene" class="gallery-img" alt="Projet 2">
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
{% endblock %}