{% extends 'base.html.twig' %}

{% block title %}CV - DA BOIT Maxence{% endblock %}

{% block stylesheets %}
<style>
    /* Timeline Design */
    .timeline-item {
        position: relative;
        padding-left: 2rem;
        margin-bottom: 2rem;
        border-left: 2px solid rgba(82, 39, 255, 0.3); /* Couleur accent légère */
    }
    
    .timeline-item::before {
        content: '';
        position: absolute;
        left: -9px;
        top: 0;
        width: 16px;
        height: 16px;
        border-radius: 50%;
        background: var(--accent-color);
        border: 3px solid white;
    }

    .glass-header {
        background: linear-gradient(135deg, rgba(82, 39, 255, 0.8), rgba(66, 24, 204, 0.9));
        backdrop-filter: blur(10px);
        color: white;
        border-radius: 0 0 40px 40px;
        margin-bottom: 3rem;
        padding: 4rem 0;
        box-shadow: 0 10px 30px rgba(82, 39, 255, 0.2);
    }

    .skill-tag {
        background: rgba(82, 39, 255, 0.1);
        color: var(--accent-color);
        border: 1px solid rgba(82, 39, 255, 0.2);
        padding: 0.5rem 1rem;
        border-radius: 8px;
        font-weight: 600;
        display: inline-block;
        margin-bottom: 0.5rem;
    }
</style>
{% endblock %}

