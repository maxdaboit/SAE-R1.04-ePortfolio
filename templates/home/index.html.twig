{% block javascripts %}
<script>
// Animation dÃ©filement logos
const stack = document.getElementById('techStack');
const items = stack.innerHTML;

// Clone 3 fois pour un dÃ©filement fluide
stack.innerHTML = items + items + items;

let scrollPos = 0;
const speed = 1;

function animate() {
    scrollPos += speed;
    
    const maxScroll = stack.scrollWidth / 3;
    
    if (scrollPos >= maxScroll) {
        scrollPos = 0;
    }
    
    stack.style.transform = `translateX(-${scrollPos}px)`;
    requestAnimationFrame(animate);
}

animate();
</script>
