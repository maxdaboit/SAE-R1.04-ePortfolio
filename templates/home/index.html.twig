    }
    
    .interest-card.gradient-3 {
        background: linear-gradient(135deg, #dfe6e9 0%, #b2bec3 100%);
    }
    
    /* Education Section */
    .education-section {
        padding: 3rem 0;
    }
    
    .education-list {
        margin-top: 2rem;
    }
    
    .education-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem 0;
        border-bottom: 1px solid var(--border-color);
    }
    
    .education-item:last-child {
