{% block stylesheets %}
<style>
    /* Hero Section */
    .hero-section {
        text-align: center;
        padding: 1rem 0 2rem;
    }
    
    .hero-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        letter-spacing: -0.02em;
    }
    
    .hero-subtitle {
        color: var(--text-secondary);
        font-size: 1rem;
    }
    
    /* Portfolio Section */
    .portfolio-section {
        padding: 3rem 0;
    }
    
    .projects-grid {
        display: grid;
        gap: 2rem;
        margin-top: 2rem;
    }
    
    .project-card {
        background: #fff;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: var(--card-shadow);
        transition: transform 0.3s, box-shadow 0.3s;
    }
    
    .project-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.12);
    }
    
    .project-image {
        width: 100%;
        height: 280px;
        background: linear-gradient(135deg, #ffd4e5 0%, #ffeaa7 50%, #dfe6e9 100%);
        position: relative;
        overflow: hidden;
    }
    
    .project-image.gradient-1 {
        background: linear-gradient(135deg, #ffeaa7 0%, #fab1a0 50%, #e17055 100%);
    }
    
    .project-image.gradient-2 {
        background: linear-gradient(135deg, #a29bfe 0%, #74b9ff 50%, #81ecec 100%);
    }
    
    .project-image.gradient-3 {
        background: linear-gradient(135deg, #fd79a8 0%, #fdcb6e 50%, #e17055 100%);
    }
    
    .project-content {
        padding: 1.5rem;
    }
    
    .project-title {
        font-size: 1.1rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }
    
    .project-description {
        color: var(--text-secondary);
        font-size: 0.9rem;
        line-height: 1.5;
    }
    
    /* About Section */
    .about-section {
        padding: 3rem 0;
    }
    
    .about-content {
        display: grid;
        grid-template-columns: 300px 1fr;
        gap: 3rem;
        align-items: start;
        margin-top: 2rem;
    }
    
    .about-image {
        width: 100%;
        height: 320px;
        background: linear-gradient(135deg, #c3f7c3 0%, #b8f3b8 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 4rem;
        box-shadow: var(--card-shadow);
    }
    
    .about-text h3 {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }
    
    .about-text p {
        color: var(--text-secondary);
        line-height: 1.8;
        margin-bottom: 1rem;
    }
    
    /* Interests Section */
    .interests-section {
        padding: 3rem 0;
    }
    
    .interests-section h3 {
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }
    
    .interests-section p {
        color: var(--text-secondary);
        line-height: 1.8;
        margin-bottom: 2rem;
    }
    
    .interests-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
    }
    
    .interest-card {
        height: 200px;
        border-radius: 12px;
        box-shadow: var(--card-shadow);
    }
    
    .interest-card.gradient-1 {
        background: linear-gradient(135deg, #ffeaa7 0%, #fab1a0 100%);
    }
    
    .interest-card.gradient-2 {
        background: linear-gradient(135deg, #a29bfe 0%, #74b9ff 100%);
    }
    
    .interest-card.gradient-3 {
        background: linear-gradient(135deg, #dfe6e9 0%, #b2bec3 100%);
    }
    
    /* Education Section */
    .education-section {
        padding: 3rem 0;
    }
    
    .education-list {
        margin-top: 2rem;
    }
    
    .education-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem 0;
        border-bottom: 1px solid var(--border-color);
    }
    
    .education-item:last-child {
        border-bottom: none;
    }
    
    .education-title {
        font-size: 1.1rem;
        font-weight: 600;
    }
    
    .education-year {
        color: var(--text-secondary);
        font-size: 0.95rem;
    }
    
    @media (max-width: 968px) {
        .about-content {
            grid-template-columns: 1fr;
        }
        
        .interests-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
{% endblock %}

