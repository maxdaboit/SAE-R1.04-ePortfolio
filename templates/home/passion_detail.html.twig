{% extends 'base.html.twig' %}

{% block title %}{{ passion.title }} - DA BOIT Maxence{% endblock %}

{% block stylesheets %}
<style>
    .passion-detail {
        padding: 4rem 0;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--text-secondary);
        text-decoration: none;
        margin-bottom: 2rem;
        font-size: 0.95rem;
        transition: color 0.2s;
    }

    .back-link:hover {
        color: var(--text-primary);
    }

    .passion-header {
        margin-bottom: 3rem;
    }

    .passion-hero {
        width: 100%;
        height: 400px;
        border-radius: 12px;
        margin-bottom: 2rem;
        box-shadow: var(--card-shadow);
    }

    .passion-hero.gradient-1 {
        background: linear-gradient(135deg, #ffeaa7 0%, #fab1a0 100%);
    }

    .passion-hero.gradient-2 {
        background: linear-gradient(135deg, #a29bfe 0%, #74b9ff 100%);
    }

    .passion-hero.gradient-3 {
        background: linear-gradient(135deg, #dfe6e9 0%, #b2bec3 100%);
    }

    .passion-content-section {
        margin-bottom: 3rem;
    }

    .passion-content-section h2 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .passion-content-section p {
        color: var(--text-secondary);
        line-height: 1.8;
        margin-bottom: 1rem;
        font-size: 1.05rem;
    }

    .passion-list {
        list-style: none;
        padding: 0;
    }

    .passion-list li {
        padding: 0.75rem 0;
        padding-left: 1.5rem;
        position: relative;
        color: var(--text-secondary);
        line-height: 1.6;
    }

    .passion-list li:before {
        content: "•";
        position: absolute;
        left: 0;
        color: #4a7c59;
        font-weight: bold;
        font-size: 1.5rem;
    }

    .skills-tags {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    .skill-tag {
        background: #f5f5f5;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 500;
    }

    @media (max-width: 768px) {
        .passion-hero {
            height: 250px;
        }
    }
</style>
{% endblock %}

{% block body %}
<section class="passion-detail">
    <div class="container-custom">
        <a href="{{ path('app_home') }}#interests" class="back-link">
            <i class="fas fa-arrow-left"></i> Retour aux passions
        </a>

        <div class="passion-header">
            <div class="passion-hero {{ passion.gradient }}"></div>
            
            <h1 class="section-title">{{ passion.title }}</h1>
            <p class="lead text-muted">{{ passion.description }}</p>
        </div>

        <div class="passion-content-section">
            <h2>En détail</h2>
            <ul class="passion-list">
                {% for item in passion.content %}
                    <li>{{ item }}</li>
                {% endfor %}
            </ul>
        </div>

        <div class="passion-content-section">
            <h2>Compétences associées</h2>
            <div class="skills-tags">
                {% for skill in passion.skills %}
                    <span class="skill-tag">{{ skill }}</span>
                {% endfor %}
            </div>
        </div>
    </div>
</section>
{% endblock %}