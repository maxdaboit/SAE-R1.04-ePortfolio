{% extends 'base.html.twig' %}

{% block title %}Mes Passions - DA BOIT Maxence{% endblock %}

{% block stylesheets %}
<style>
    /* ========================
       GRILLE DES PASSIONS
       ======================== */
    .passion-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 2rem;
        padding-bottom: 4rem;
    }

    /* ========================
       CARTE PASSION (image + overlay)
       ======================== */
    .topic-card {
        position: relative;
        background: #000;              /* fallback */
        border-radius: 28px;
        overflow: hidden;
        border: 1px solid rgba(0,0,0,0.05);
        height: 450px;
        display: flex;
        flex-direction: column;
        text-decoration: none;         /* pour le <a> */
        color: var(--text-primary);
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .topic-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    }

    /* couche image en fond */
    .topic-card__bg {
        position: absolute;
        inset: 0;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        transform: scale(1);
        transition: transform 0.4s ease;
    }

    /* overlay sombre pour lisibilité du texte */
    .topic-card__bg::before {
        content: "";
        position: absolute;
        inset: 0;
        background: linear-gradient(
            to bottom,
            rgba(0, 0, 0, 0.2),
            rgba(0, 0, 0, 0.75)
        );
    }

    .topic-card:hover .topic-card__bg {
        transform: scale(1.05);
    }

    /* contenu texte au-dessus de l'image */
    .topic-card__content {
        position: relative;
        z-index: 1;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        height: 100%;
        padding: 1.75rem;
        color: #fff;
    }

    .topic-card__title {
        font-size: 1.6rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .topic-card__subtitle {
        font-size: 0.9rem;
        opacity: 0.9;
    }

    /* petit élément visuel en haut de la carte */
    .topic-card__badge {
        position: absolute;
        top: 1.5rem;
        left: 1.75rem;
        z-index: 1;
        font-size: 2.8rem;
        color: rgba(255,255,255,0.75);
        text-shadow: 0 3px 10px rgba(0,0,0,0.5);
    }
</style>
{% endblock %}

{% block body %}
<div class="container-custom py-5">
    <a
        href="{{ path('app_home') }}"
        class="btn btn-sm btn-outline-dark rounded-pill mb-4"
    >
        ← Retour
    </a>

    <h1 class="text-center fw-bold mb-5">Mes Passions</h1>

    <div class="passion-grid">

        {# ========================
           Carte 1 : Japonais
           Image à placer dans public/Photo/japonais.jpg
           ======================== #}
        <a href="{{ path('app_japanese') }}" class="topic-card">
            <div
                class="topic-card__bg"
                style="background-image: url('{{ asset('Photo/1.jpg') }}');"
            ></div>

            {# Kanji / emoji décoratif #}
            <div class="topic-card__badge">
                漢字
            </div>

            <div class="topic-card__content">
                <div class="topic-card__title">日本語</div>
                <p class="topic-card__subtitle">
                    Apprentissage de la langue, écriture et immersion dans la
                    culture japonaise.
                </p>
            </div>
        </a>

        {# ========================
           Carte 2 : Photographie
           Image à placer dans public/Photo/photographie.jpg
           ======================== #}
        <a href="{{ path('app_photographie') }}" class="topic-card">
            <div
                class="topic-card__bg"
                style="background-image: url('{{ asset('Photo/2.jpg') }}');"
            ></div>

            {# Icône ou petit texte décoratif #}
            <div class="topic-card__badge">
                <i class="fas fa-camera-retro"></i>
            </div>

            <div class="topic-card__content">
                <div class="topic-card__title">Photographie</div>
                <p class="topic-card__subtitle">
                    Prise de vue, retouche et composition.
                </p>
            </div>
        </a>

    </div>
</div>
{% endblock %}
