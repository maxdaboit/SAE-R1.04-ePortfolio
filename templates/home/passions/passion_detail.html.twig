{% extends 'base.html.twig' %}

{% block title %}{{ passion.title }} - DA BOIT Maxence{% endblock %}

{% block stylesheets %}
<style>
    /* --- Styles spécifiques à la page Passion --- */
    .passion-detail {
        padding: 4rem 0;
    }

    /* Lien retour stylisé */
    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--text-secondary);
        text-decoration: none;
        margin-bottom: 2rem;
        font-size: 0.95rem;
        font-weight: 500;
        transition: color 0.2s ease, transform 0.2s ease;
    }

    .back-link:hover {
        color: var(--text-primary);
        transform: translateX(-3px); /* Petit effet de mouvement au survol */
    }

    /* En-tête */
    .passion-header {
        margin-bottom: 3rem;
        text-align: center; /* Centrer le titre et la description pour un meilleur impact */
    }

    /* Image Hero (Gradient) */
    .passion-hero {
        width: 100%;
        height: 350px; /* Légèrement réduit pour équilibrer */
        border-radius: 20px; /* Plus arrondi pour matcher le style moderne */
        margin-bottom: 2.5rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
    }
    
    .passion-hero:hover {
        transform: scale(1.01); /* Effet de zoom subtil */
    }

    /* Classes Gradient (correspondent à celles du contrôleur) */
    .gradient-1 { background: linear-gradient(135deg, #ffeaa7 0%, #fab1a0 100%); }
    .gradient-2 { background: linear-gradient(135deg, #a29bfe 0%, #74b9ff 100%); }
    .gradient-3 { background: linear-gradient(135deg, #dfe6e9 0%, #b2bec3 100%); }

    /* Titres */
    .section-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: var(--text-primary);
    }

    .lead-text {
        font-size: 1.1rem;
        color: var(--text-secondary);
        max-width: 800px;
        margin: 0 auto;
        line-height: 1.6;
    }

    /* Sections de contenu */
    .passion-content-section {
        margin-bottom: 4rem;
    }

    .passion-content-section h2 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        border-bottom: 2px solid var(--border-color);
        padding-bottom: 0.5rem;
        display: inline-block;
    }

    /* Liste stylisée */
    .passion-list {
        list-style: none;
        padding: 0;
    }

    .passion-list li {
        padding: 1rem 0;
        position: relative;
        padding-left: 2rem;
        color: var(--text-secondary);
        font-size: 1.05rem;
        line-height: 1.6;
        border-bottom: 1px solid rgba(0,0,0,0.05);
    }
    
    .passion-list li:last-child {
        border-bottom: none;
    }

    .passion-list li:before {
        content: "➜"; /* Flèche plus moderne que le point */
        position: absolute;
        left: 0;
        top: 1rem;
        color: var(--accent-color); /* Utilise ta couleur d'accent */
        font-weight: bold;
        font-size: 1rem;
    }

    /* Tags Compétences */
    .skills-tags {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .skill-tag {
        background: #fff;
        border: 1px solid var(--border-color);
        padding: 0.6rem 1.2rem;
        border-radius: 50px;
        font-size: 0.95rem;
        font-weight: 500;
        color: var(--text-primary);
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        transition: all 0.2s ease;
    }
    
    .skill-tag:hover {
        background: var(--accent-color);
        color: white;
        border-color: var(--accent-color);
        transform: translateY(-2px);
    }

    @media (max-width: 768px) {
        .passion-hero { height: 200px; }
        .section-title { font-size: 2rem; }
    }
</style>
{% endblock %}

{% block body %}
<section class="passion-detail">
    <div class="container-custom">
        {# Lien retour #}
        <a href="{{ path('app_passions') }}" class="back-link">
            <i class="fas fa-arrow-left"></i> Retour aux passions
        </a>

        {# En-tête #}
        <div class="passion-header">
            {# Image Hero avec la classe gradient dynamique #}
            <div class="passion-hero {{ passion.gradient }}"></div>
            
            <h1 class="section-title">{{ passion.title }}</h1>
            <p class="lead-text">{{ passion.description }}</p>
        </div>

        {# Contenu principal #}
        <div class="row">
            <div class="col-lg-8 mx-auto">
                
                {# Section Détails #}
                <div class="passion-content-section">
                    <h2>En détail</h2>
                    <ul class="passion-list">
                        {% for item in passion.content %}
                            <li>{{ item }}</li>
                        {% endfor %}
                    </ul>
                </div>

                {# Section Compétences #}
                <div class="passion-content-section">
                    <h2>Compétences associées</h2>
                    <div class="skills-tags">
                        {% for skill in passion.skills %}
                            <span class="skill-tag">{{ skill }}</span>
                        {% endfor %}
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>
{% endblock %}