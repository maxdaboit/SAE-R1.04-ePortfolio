{% extends 'base.html.twig' %}

{% block title %}Photographie - DA BOIT Maxence{% endblock %}

{% block stylesheets %}
<style>
    .bento-grid {
        display: grid;
        grid-template-columns: repeat(12, 1fr);
        gap: 1.5rem;
        padding-bottom: 4rem;
    }

    .bento-card {
        background: #fff;
        border-radius: 28px;
        padding: 2.5rem;
        border: 1px solid rgba(0,0,0,0.05);
        overflow: hidden;
        position: relative;
    }

    .col-span-12 { grid-column: span 12; }
    .col-span-8  { grid-column: span 8; }
    .col-span-7  { grid-column: span 7; }
    .col-span-6  { grid-column: span 6; }
    .col-span-5  { grid-column: span 5; }
    .col-span-4  { grid-column: span 4; }

    @media (max-width: 968px) {
        .col-span-8, .col-span-7, .col-span-6, .col-span-5, .col-span-4 {
            grid-column: span 12;
        }
    }

    .photo-hero {
        background: linear-gradient(135deg, #1f2933 0%, #111827 100%);
        color: #f9fafb;
    }

    .photo-hero-badge {
        background: rgba(255,255,255,0.08);
        border-radius: 999px;
        padding: 0.3rem 0.9rem;
        font-size: 0.8rem;
        letter-spacing: .08em;
        text-transform: uppercase;
    }

    .photo-grid {
        display: grid;
        grid-template-columns: repeat(4, minmax(0, 1fr));
        gap: 0.75rem;
    }

    @media (max-width: 992px) {
        .photo-grid {
            grid-template-columns: repeat(3, minmax(0, 1fr));
        }
    }

    @media (max-width: 576px) {
        .photo-grid {
            grid-template-columns: repeat(2, minmax(0, 1fr));
        }
    }

    .photo-thumb {
        border-radius: 18px;
        overflow: hidden;
        height: 180px;
        background: #000;
    }

    .photo-thumb img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        opacity: .9;
        transition: transform .3s ease, opacity .3s ease;
    }

    .photo-thumb img:hover {
        transform: scale(1.05);
        opacity: 1;
    }

    .code-block {
        background: #1e1e1e;
        color: #d4d4d4;
        padding: 1.5rem;
        border-radius: 15px;
        font-family: 'Consolas','Monaco',monospace;
        font-size: 0.85rem;
        overflow-x: auto;
        border: 1px solid #333;
    }
</style>
{% endblock %}

{% block body %}
