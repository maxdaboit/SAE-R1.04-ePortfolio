{% extends 'base.html.twig' %}

{% block title %}{{ project.title }} - Portfolio{% endblock %}

{% block stylesheets %}
<style>
    .project-panels {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 1.5rem;
        align-items: stretch;
    }

    .project-panels .glass-card {
        height: 100%;
    }
</style>
{% endblock %}

{% block body %}
<div class="container-custom py-5">
    <div class="row">
        {# Colonne de Gauche : Infos #}
        <div class="col-lg-5 mb-4 d-flex flex-column gap-4">
            <a href="{{ path('app_eportfolio') }}" class="text-muted d-inline-block">← Retour</a>

            <div>
                <h1 class="display-4 fw-bold mb-3">{{ project.title }}</h1>
                <div class="d-flex gap-2 mb-3">
                    <span class="badge bg-primary">{{ project.date }}</span>
                    <span class="badge bg-secondary">{{ project.duration }}</span>
                </div>
            </div>

            <div class="glass-card p-4">
                <h5 class="fw-bold mb-2">Le projet</h5>
                <p class="text-secondary mb-0">{{ project.full_description }}</p>
            </div>

            {% if analysis is defined and analysis %}
                <div class="glass-card p-4">
                    <h5 class="fw-bold mb-2">Analyse réflexive</h5>

                    <p class="text-secondary mb-3">
                        {{ analysis.text1 }}
                    </p>
                    <p class="text-secondary mb-3">
                        {{ analysis.text2 }}
                    </p>
                    <p class="text-secondary mb-0">
                        {{ analysis.text3 }}
                    </p>
                </div>
            {% endif %}

            <div>
                <h5 class="fw-bold mb-3">Technologies</h5>
                <div class="d-flex flex-wrap gap-2">
                    {% for tech in project.technologies %}
                        <span class="badge bg-light text-dark border p-2">{{ tech }}</span>
                    {% endfor %}
                </div>
            </div>
        </div>

        {# Colonne de Droite : Image + Challenges / Résultats #}
        <div class="col-lg-7">
            <div class="rounded-4 overflow-hidden shadow-lg mb-5">
                <img src="{{ asset('Image/' ~ project.imageFilename) }}" alt="{{ project.title }}" class="w-100" style="object-fit: cover; height: 400px;">
            </div>

            <div class="project-panels">
                <div class="glass-card p-4">
                    <h5 class="fw-bold text-danger mb-3">
                        <i class="fas fa-exclamation-triangle me-2"></i>Challenges
                    </h5>
                    <ul class="text-secondary small ps-3 mb-0">
                        {% for challenge in project.challenges %}
                            <li class="mb-2">{{ challenge }}</li>
                        {% endfor %}
                    </ul>
                </div>

                <div class="glass-card p-4">
                    <h5 class="fw-bold text-success mb-3">
                        <i class="fas fa-check-circle me-2"></i>Résultats
                    </h5>
                    <ul class="text-secondary small ps-3 mb-0">
                        {% for result in project.results %}
                            <li class="mb-2">{{ result }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
