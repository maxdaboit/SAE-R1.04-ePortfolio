{% extends 'base.html.twig' %}

{% block title %}{{ project.title }} - DA BOIT{% endblock %}

{% block stylesheets %}
<style>
    .project-detail {
        padding: 4rem 0;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--text-secondary);
        text-decoration: none;
        margin-bottom: 2rem;
        font-size: 0.95rem;
        transition: color 0.2s;
    }

    .back-link:hover {
        color: var(--text-primary);
    }

    .project-header {
        margin-bottom: 3rem;
    }

    .project-hero {
        width: 100%;
        height: 400px;
        border-radius: 12px;
        margin-bottom: 2rem;
        box-shadow: var(--card-shadow);
    }

    .project-hero.gradient-1 {
        background: linear-gradient(135deg, #ffeaa7 0%, #fab1a0 50%, #e17055 100%);
    }

    .project-hero.gradient-2 {
        background: linear-gradient(135deg, #a29bfe 0%, #74b9ff 50%, #81ecec 100%);
    }

    .project-hero.gradient-3 {
        background: linear-gradient(135deg, #fd79a8 0%, #fdcb6e 50%, #e17055 100%);
    }

    .project-meta {
        display: flex;
        gap: 2rem;
        margin-bottom: 2rem;
        flex-wrap: wrap;
    }

    .meta-item {
        display: flex;
        flex-direction: column;
    }

    .meta-label {
        font-size: 0.85rem;
        color: var(--text-secondary);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.25rem;
    }

    .meta-value {
        font-size: 1rem;
        font-weight: 600;
    }

    .project-content-section {
        margin-bottom: 3rem;
    }

    .project-content-section h2 {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .project-content-section p {
        color: var(--text-secondary);
        line-height: 1.8;
        margin-bottom: 1rem;
    }

    .tech-tags {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
    }

    .tech-tag {
        background: #f5f5f5;
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 500;
    }

    .project-list {
        list-style: none;
        padding: 0;
    }

    .project-list li {
        padding: 0.75rem 0;
        padding-left: 1.5rem;
        position: relative;
        color: var(--text-secondary);
        line-height: 1.6;
    }

    .project-list li:before {
        content: "✓";
        position: absolute;
        left: 0;
        color: #4a7c59;
        font-weight: bold;
    }

    @media (max-width: 768px) {
        .project-hero {
            height: 250px;
        }

        .project-meta {
            gap: 1rem;
        }
    }
</style>
{% endblock %}

{% block body %}
<section class="project-detail">
    <div class="container">
        <a href="{{ path('app_home') }}#portfolio" class="back-link">
            ← Retour au portfolio
        </a>

        <div class="project-header">
            <div class="project-hero {{ project.gradient }}"></div>
            
            <h1 class="section-title">{{ project.title }}</h1>
            
            <div class="project-meta">
                <div class="meta-item">
                    <span class="meta-label">Date</span>
                    <span class="meta-value">{{ project.date }}</span>
                </div>
                <div class="meta-item">
                    <span class="meta-label">Durée</span>
                    <span class="meta-value">{{ project.duration }}</span>
                </div>
            </div>
        </div>

        <div class="project-content-section">
            <h2>Description du projet</h2>
            <p>{{ project.full_description }}</p>
        </div>

        <div class="project-content-section">
            <h2>Technologies utilisées</h2>
            <div class="tech-tags">
                {% for tech in project.technologies %}
                    <span class="tech-tag">{{ tech }}</span>
                {% endfor %}
            </div>
        </div>

        {% if project.challenges is not empty %}
        <div class="project-content-section">
            <h2>Défis rencontrés</h2>
            <ul class="project-list">
                {% for challenge in project.challenges %}
                    <li>{{ challenge }}</li>
                {% endfor %}
            </ul>
        </div>
        {% endif %}

        {% if project.results is not empty %}
        <div class="project-content-section">
            <h2>Résultats obtenus</h2>
            <ul class="project-list">
                {% for result in project.results %}
                    <li>{{ result }}</li>
                {% endfor %}
            </ul>
        </div>
        {% endif %}
    </div>
</section>
{% endblock %}