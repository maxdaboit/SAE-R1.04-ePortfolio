{% extends 'base.html.twig' %}

{% block title %}{{ project.title }} - Portfolio{% endblock %}

{% block stylesheets %}
<style>
    /* --- R√âUTILISATION DU STYLE BENTO (Index) --- */
    :root {
        --bg-color: #ffffff;
        --card-bg: #f8f9fa;
        --accent-color: #5227FF;
        --text-primary: #111;
        --text-secondary: #666;
        --radius: 28px;
    }

    body {
        background-color: var(--bg-color);
        color: var(--text-primary);
    }

    .bento-grid {
        display: grid;
        grid-template-columns: repeat(12, 1fr);
        gap: 1.5rem;
        padding: 2rem 0;
        max-width: 1200px;
        margin: 0 auto;
    }

    .bento-card {
        background: var(--card-bg);
        border-radius: var(--radius);
        padding: 2.5rem;
        border: 1px solid rgba(0,0,0,0.03);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        overflow: hidden;
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    
    .bento-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        border-color: rgba(0,0,0,0.08);
    }

    /* Colonnes */
    .col-span-12 { grid-column: span 12; }
    .col-span-8 { grid-column: span 8; }
    .col-span-6 { grid-column: span 6; }
    .col-span-4 { grid-column: span 4; }

    @media (max-width: 968px) {
        .col-span-8, .col-span-6, .col-span-4 { grid-column: span 12; }
    }

    /* --- STYLES SP√âCIFIQUES PROJET --- */
    
    /* Bouton Retour */
    .back-btn {
        display: inline-flex; align-items: center; gap: 0.5rem;
        padding: 0.8rem 1.5rem;
        background: #fff; border: 1px solid #eee;
        border-radius: 50px; text-decoration: none;
        color: var(--text-primary); font-weight: 600; font-size: 0.9rem;
        transition: all 0.2s; margin-bottom: 2rem;
    }
    .back-btn:hover { background: var(--text-primary); color: #fff; border-color: var(--text-primary); }

    /* Typographie */
    h1 { font-size: clamp(2rem, 4vw, 3rem); font-weight: 800; letter-spacing: -0.03em; line-height: 1.1; margin-bottom: 1rem; }
    h2 { font-size: 1.25rem; font-weight: 700; margin-bottom: 1rem; color: var(--text-primary); }
    p { color: var(--text-secondary); line-height: 1.8; font-size: 1rem; }

    /* Carte Visuelle (Gradient) */
    .visual-card { min-height: 250px; width: 100%; height: 100%; }
    .gradient-1 { background: linear-gradient(135deg, #FF9A9E 0%, #FECFEF 100%); }
    .gradient-2 { background: linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%); }
    .gradient-3 { background: linear-gradient(135deg, #84fab0 0%, #8fd3f4 100%); }

    /* M√©tadonn√©es (Date, Dur√©e) */
    .meta-row { display: flex; justify-content: space-between; border-bottom: 1px solid rgba(0,0,0,0.05); padding-bottom: 1rem; margin-bottom: 1rem; }
    .meta-label { font-size: 0.85rem; color: #999; font-weight: 500; text-transform: uppercase; letter-spacing: 0.05em; }
    .meta-value { font-weight: 700; font-size: 1rem; }

    /* Tags Tech */
    .tech-pill {
        display: inline-block; padding: 0.4rem 0.9rem;
        background: #fff; border: 1px solid rgba(0,0,0,0.08);
        border-radius: 50px; font-size: 0.85rem; font-weight: 500;
        margin: 0 0.4rem 0.4rem 0; color: var(--text-secondary);
    }

    /* Listes (D√©fis & R√©sultats) */
    .custom-list { list-style: none; padding: 0; margin: 0; }
    .custom-list li {
        padding: 0.8rem 0;
        border-bottom: 1px solid rgba(0,0,0,0.03);
        color: var(--text-secondary);
        display: flex; align-items: start; gap: 10px;
    }
    .custom-list li:last-child { border-bottom: none; }
    .custom-list li::before {
        content: "‚Üí"; color: var(--accent-color); font-weight: bold;
    }
    
    /* Image overlay */
    .project-logo {
        width: 80px; height: 80px; background: white;
        border-radius: 20px; display: flex; align-items: center; justify-content: center;
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        font-size: 2rem;
    }
</style>
{% endblock %}

{% block body %}
<section class="py-5">
    <div class="container-custom">
        
        {# Navigation #}
        <a href="{{ path('app_home') }}#portfolio" class="back-btn">
            <i class="fas fa-arrow-left"></i> Retour
        </a>

        <div class="bento-grid">

            {# --- 1. TITRE & INTRO (Grande carte gauche) --- #}
            <div class="bento-card col-span-8">
                <span class="meta-label mb-2" style="color: var(--accent-color);">Projet R&T</span>
                <h1>{{ project.title }}</h1>
                <p class="mb-0">{{ project.description }}</p>
            </div>

            {# --- 2. VISUEL (Carte droite) --- #}
            <div class="bento-card col-span-4 p-0 border-0">
                <div class="visual-card {{ project.gradient }} d-flex align-items-center justify-content-center">
                    {# Si tu as une image sp√©cifique, on peut l'afficher, sinon une ic√¥ne ou rien #}
                    <div class="project-logo">
                        {% if project.imageFilename is defined and project.imageFilename %}
                            <img src="{{ asset('Image/' ~ project.imageFilename) }}" alt="Logo" style="width: 50px; height: 50px; object-fit: contain;">
                        {% else %}
                            üìÅ
                        {% endif %}
                    </div>
                </div>
            </div>

            {# --- 3. INFOS & TECH (Colonne Lat√©rale Droite) --- #}
            <div class="bento-card col-span-4" style="grid-row: span 2;">
                <h2 class="mb-4">D√©tails</h2>
                
                <div class="meta-row">
                    <span class="meta-label">Date</span>
                    <span class="meta-value">{{ project.date }}</span>
                </div>
                
                <div class="meta-row">
                    <span class="meta-label">Dur√©e</span>
                    <span class="meta-value">{{ project.duration }}</span>
                </div>

                <div class="mt-4">
                    <span class="meta-label d-block mb-3">Technologies</span>
                    <div>
                        {% for tech in project.technologies %}
                            <span class="tech-pill">{{ tech }}</span>
                        {% endfor %}
                    </div>
                </div>
            </div>

            {# --- 4. DESCRIPTION D√âTAILL√âE (Grande carte centrale) --- #}
            <div class="bento-card col-span-8">
                <h2>Contexte & R√©alisation</h2>
                <p style="white-space: pre-line;">{{ project.full_description }}</p>
            </div>

            {# --- 5. D√âFIS (Carte bas gauche) --- #}
            {% if project.challenges is not empty %}
            <div class="bento-card col-span-6">
                <h2>‚ö° D√©fis rencontr√©s</h2>
                <ul class="custom-list">
                    {% for challenge in project.challenges %}
                        <li>{{ challenge }}</li>
                    {% endfor %}
                </ul>
            </div>
            {% endif %}

            {# --- 6. R√âSULTATS (Carte bas droite) --- #}
            {% if project.results is not empty %}
            <div class="bento-card col-span-6">
                <h2>üèÜ R√©sultats obtenus</h2>
                <ul class="custom-list">
                    {% for result in project.results %}
                        <li>{{ result }}</li>
                    {% endfor %}
                </ul>
            </div>
            {% endif %}

        </div>
    </div>
</section>
{% endblock %}