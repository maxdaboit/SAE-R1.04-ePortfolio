{% extends 'base.html.twig' %}

{% block title %}{{ project.title }} - Portfolio{% endblock %}

{% block body %}
<div class="container-custom py-5">
    <div class="row">
        {# Colonne de Gauche : Infos #}
        <div class="col-lg-5 mb-4">
            <a href="{{ path('app_home') }}" class="text-muted mb-4 d-inline-block">← Retour à l'accueil</a>
            
            <h1 class="display-4 fw-bold mb-3">{{ project.title }}</h1>
            <div class="d-flex gap-2 mb-4">
                <span class="badge bg-primary">{{ project.date }}</span>
                <span class="badge bg-secondary">{{ project.duration }}</span>
            </div>
            
            <div class="glass-card p-4 mb-4">
                <h5 class="fw-bold">Le Projet</h5>
                <p class="text-secondary">{{ project.full_description }}</p>
            </div>

            <div class="mb-4">
                <h5 class="fw-bold mb-3">Technologies</h5>
                <div class="d-flex flex-wrap gap-2">
                    {% for tech in project.technologies %}
                        <span class="badge bg-light text-dark border p-2">{{ tech }}</span>
                    {% endfor %}
                </div>
            </div>
        </div>

        {# Colonne de Droite : Image + Résultats #}
        <div class="col-lg-7">
            <div class="rounded-4 overflow-hidden shadow-lg mb-5">
                <img src="{{ asset('Image/' ~ project.imageFilename) }}" alt="{{ project.title }}" class="w-100" style="object-fit: cover; height: 400px;">
            </div>

            <div class="row g-4">
                <div class="col-md-6">
                    <div class="glass-card p-4 h-100">
                        <h5 class="fw-bold text-danger mb-3"><i class="fas fa-exclamation-triangle me-2"></i>Challenges</h5>
                        <ul class="text-secondary small ps-3">
                            {% for challenge in project.challenges %}
                                <li class="mb-2">{{ challenge }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="glass-card p-4 h-100">
                        <h5 class="fw-bold text-success mb-3"><i class="fas fa-check-circle me-2"></i>Résultats</h5>
                        <ul class="text-secondary small ps-3">
                            {% for result in project.results %}
                                <li class="mb-2">{{ result }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}